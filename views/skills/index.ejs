<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/stylesheets/style.css'>
    <title>Express-Dev-Skills</title>
</head>
<body>
    <h1>Wizard Spells</h1>
    <h2><%= date %></br><%= time %></h2>
    <ul>
        <% skills.forEach(function(t, idx) { %>
            <li>
                <form action="/skills/<%= idx %>?_method=DELETE"id="delete-form" method="POST">
                    <button type="submit">X</button>
                </form>

                <a href="/skills/<%= idx %>"><%= t.spell %></a>
            </li>
        <% }) %>
    </ul>
    <a href="/skills/new">Add Spell</a>
</body>
</html>